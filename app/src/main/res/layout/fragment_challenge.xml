<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context="com.monster.handscan.protecthealth.fragment.ChallengeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:src="@drawable/back2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/condensedbold"
                android:text="@string/challenge"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/noticeChallenge"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/condensedbold"
                android:text="@string/text_challenge"
                android:textAlignment="center"
                android:textColor="#1076b8"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/confirmChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/ok"
                android:src="@drawable/challenge" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/agreePopup"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="60dp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/condensedbold"
                        android:gravity="center"
                        android:text="Clean your hands \n within 7 days"
                        android:textAlignment="center"
                        android:textColor="#1076b8"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_gravity="center|top"
                        android:src="@drawable/rank" />

                    <TextView
                        android:id="@+id/number_people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/condensedbold"
                        android:gravity="center"
                        android:text="people accepted the challenge"
                        android:textAlignment="center"
                        android:textColor="#1076b8"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/number_people"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/medium"
                        android:text="You can remove the ads after \n completing the challenge"
                        android:textAlignment="center"
                        android:textColor="#1076b8"
                        android:textSize="18sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/agreeChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agreePopup"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ok"
                android:src="@drawable/agree"
                android:visibility="invisible" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/progressChallenge"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/blank" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/day8" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/night" />
            </LinearLayout>

            <ListView
                android:id="@+id/dayList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:background="@drawable/bottom_sheet_bg"
                android:choiceMode="none"
                android:clickable="false"
                android:divider="@null"
                android:listSelector="@drawable/bottom_sheet_bg" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/scanBtn"
            android:layout_below="@+id/progressChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:src="@drawable/checknow"
            android:visibility="invisible" />
    </RelativeLayout>
</FrameLayout>